        <Image x:Name="UserPhoto" HeightRequest="200" WidthRequest="200" />
        <Label x:Name="FullNameLabel" FontSize="20" />
        <Label x:Name="GenderLabel" FontSize="15" />
        <Label x:Name="AgeLabel" FontSize="15" />
        <Label x:Name="HostelLabel" FontSize="15" />
